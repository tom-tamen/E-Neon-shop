            <div>
                {{ category.name }}
                <img src="{{ asset('uploads/categories/'~category.pictureUrl) }}" alt="{{ category.name }}" style="width: 128px;">
            </div>
        </a>
        <p>---------------------------</p>
    {% endfor %}
</div>
{% endblock %}

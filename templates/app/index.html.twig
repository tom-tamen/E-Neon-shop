{% extends 'base.html.twig' %}

{% block title %}E-Neon Shop{% endblock %}

{% block body %}

    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2 class="neonText">Check Our Products</h2>
                        <span class="neonText1">Browse our categories to find the perfect match</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** Products Area Starts ***** -->
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Our Categories</h2>
                        <span>Check out all of our categories.</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {% for category in categories %}
                <div class="col-lg-4">
                    <div class="item">
                        <div class="thumb">
                            <div class="hover-content">
                                <ul>
                                    <li><a href="{{ path('category_show', {'id':category.id}) }}"><i class="fa fa-eye"></i></a></li>
                                </ul>
                            </div>
                            <img src="{{ asset('uploads/categories/'~category.pictureUrl) }}" alt="{{ category.name }}" alt="{{ category.name }}">
                        </div>
                        <div class="down-content">
                            <h4>{{ category.name }}</h4>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- ***** Products Area Ends ***** -->


{% endblock %}

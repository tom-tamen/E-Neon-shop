{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}


    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        th, td {
            padding: 5px;
        }

        img{
            width: 64px;
        }
        table{
            margin-bottom: 50px;
        }
    </style>

    <h1>Order</h1>


        {% for order in user.orders %}
            <table>
                <thead>
                    <tr>
                        <th colspan="4">Order : {{ order.date |date('d-m-Y') }}</th>
                    </tr>
                </thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                </tr>
                    {% for orderProduct in order.orderProducts %}
                        <tr>
                            <td>
                                {{ orderProduct.product.name }}
                                <img src="{{ asset('./uploads/products/'~orderProduct.product.pictureUrl) }}" alt="{{ orderProduct.product.name }}">
                            </td>
                            <td>{{ orderProduct.quantity }}</td>
                            <td>{{ orderProduct.product.price }} €</td>
                            <td>{{ orderProduct.total }} €</td>
                        </tr>
                    {% endfor %}
                    <tfoot>
                        <tr>
                            <th colspan="4">Total Price : {{ order.total }} €</th>
                        </tr>
                    </tfoot>
            </table>
        {% endfor %}

{% endblock %}
